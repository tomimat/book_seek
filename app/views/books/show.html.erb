
<div class="row">
   <div class="col-6 mx-auto">

   <!--タグ-->
  <% @book_tags.each do |tag| %>
  <%= link_to tag.name,search_tag_path(tag_id: tag.id)%><%="(#{tag.books.count})" %>
  <% end %>

<div>
  <p>タイトル：<%= @book.name %></p>
  <p>感想：<%= @book.coption %></p>
  <p>名前：<%= @book.name %></p>
  <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>


  <div></div>

 <%= render "output_star", book: @book %>

  <h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <a href="/users/<%= c.user.id %>"><%= c.user.email %></a>
    <%= c.content %>
    <hr>
  </div>
<% end %>

<%= form_for [@book, @comment] do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

<%= link_to "ホームへ戻る", books_path %>
   <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
</div>
</div>
</div>