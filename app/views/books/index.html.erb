<div class="row">
   <div class="col-6 mx-auto">
<h1>ようこそブックサーチへ！</h1>



<div class="container">
<% if @tag %>
<h5>タグが<%=@tag.name%>の投稿一覧</h5>
<% end %>
<!--タグリスト-->

<% @books.each do |book| %>
<!--投稿はカードで囲む-->
<div class="card">
  <div class="card-body">
    <!--タイトル表示される文字数は２５文字までにしてます-->
    <h6 class="card-title">
      <%=link_to book_path(book.id) do %><%= book.name.truncate(25) %>
      <% end %>
    </h6>
    <p>感想：<%= book.coption %></p>





  </div>
</div>
<% end %>

<div class="pagination pagination-sm justify-content-center">


</div>


<style>
.card{
  padding:0;
  margin:0;
  border:none;
}



h6 {
  /*線の種類（実線） 太さ 色*/
  border-bottom: solid 3px black;
}
</style>

</div>
</div>